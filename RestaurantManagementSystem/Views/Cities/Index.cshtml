@model IEnumerable<RestaurantManagementSystem.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Active</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           @if (String.Equals(item.IsActive_YN, true))
           {
            <span class="badge bg-green">&nbsp; YES &nbsp;</span>
           }
           else
           {
            <span class="badge bg-gray">&nbsp; NO &nbsp;</span>
           }
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-edit" })&nbsp; &nbsp; 
            @Html.ActionLink(" ", "Details", new { id=item.Id }, new { @class = "fa fa-eye" }) &nbsp; &nbsp;
            @Html.ActionLink(" ", "Delete", new { id=item.Id }, new { @class = "fa fa-remove" })
        </td>
    </tr>
}

</table>
