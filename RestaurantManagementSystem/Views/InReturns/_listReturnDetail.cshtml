

<div class="col-md-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h2 class="box-title"><b>Inventory Returns</b><br /> </h2>
            <hr />
            <div class="box-tools pull-right">

            </div>
            <table class="table table-striped" id="tbReturnDetail">
                <thead>
                    <tr>
                        <th>
                            Return #
                        </th>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Quantity
                        </th>
                         
                        <th>
                            <button class="btn btn-primary btn-xs" data-bind="click: addChildItem">Add</button>
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: listReturnDetails">
                    <tr >
                        <td class="form-group">
                            <span data-bind=" text: ReturnNo "></span>
                        </td>
                        <td class="form-group">
                            <select class="form-control small-input" data-bind="options:listItems, optionsCaption: 'Select',
                                    optionsValue: function (item) { return item.Id; },
                                    optionsText: function (item) { return item.Name; },
                                    value: InventoryItemId,valueUpdate: 'change' , event: {change: flagInvReturnsDetailAsEdited}"></select>
                        </td>
                        <td class="form-group">
                            <input class="form-control input-sm" data-bind="value: Quantity , event: {change: flagInvReturnsDetailAsEdited}" />
                        </td>
                        <td>
                            <button class="btn btn-danger btn-xs" data-bind="click: $parent.deleteChildItem">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
