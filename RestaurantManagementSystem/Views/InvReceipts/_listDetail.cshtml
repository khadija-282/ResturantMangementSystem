
<div class="col-md-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h2 class="box-title"><b>Inventory Receipt</b><br /> </h2>
            <hr />
            <div class="box-tools pull-right">
            </div>
            <table id="tbReceiptDetail" class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>    <button class="btn btn-primary btn-xs" data-bind="click: addChildItem">Add</button></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: listDetail">
                    <tr>
                        <td>
                            <select class="form-control small-input" data-bind="options:listItems, optionsCaption: 'Select',
                                    optionsValue: function (item) { return item.Id; },
                                    optionsText: function (item) { return item.Name; },
                                    value: InventoryItemId,valueUpdate: 'change' "></select>
                        </td>
                        <td>
                            <input class="form-control input-sm" data-bind="value: Quantity " />
                        </td>
                        <td>
                            <input class="form-control input-sm" data-bind="value: Price " />
                        </td>
                        <td>
                            <button class="btn btn-danger btn-xs" data-bind="click: $parent.deleteChildItem">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


