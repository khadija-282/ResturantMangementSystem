@model RestaurantManagementSystem.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="" style="min-height: 960px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <span class="info-box-text"><b>MONTH</b></span>
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="ion ion-ios-cart-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Sales: <b>@Model.MonthlySales.Sales</b></span>
                        <span class="info-box-text">GST: <b>@Model.MonthlySales.GST</b></span>
                        <span class="info-box-text">Service: <b>@Model.MonthlySales.ServiceCharges</b></span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <span class="info-box-text"><b>TODAY</b></span>
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="ion ion-ios-cart-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Sales: <b>@Model.TodaysSales.Sales</b></span>
                        <span class="info-box-text">GST: <b>@Model.TodaysSales.GST</b></span>
                        <span class="info-box-text">Service: <b>@Model.TodaysSales.ServiceCharges</b></span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <span class="info-box-text"><b>HOT ITEM</b></span>
                <div class="info-box">
                    <span class="info-box-icon bg-red-active"><i class="ion ion-ios-star-outline"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text"><b>(TODAY)</b></span>
                        <span class="info-box-text">@Model.TodaysHotItem.Name <b>@Model.TodaysHotItem.Quantity</b></span>
                        <span class="info-box-text"><b>(THIS MONTH)</b></span>
                        <span class="info-box-text">@Model.MonthHotItem.Name <b>@Model.MonthHotItem.Quantity</b></span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-12">
                <!-- MAP & BOX PANE -->
                <!-- /.box -->
                <div class="row">

                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Latest Orders</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                <thead>
                                    <tr>
                                        <th>Order#</th>
                                        <th>Invoice#</th>
                                        <th>Date</th>
                                        <th>Table</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th>GST</th>
                                        <th>Net</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.TodaysSalesDetail)
                                    {
                                    <tr>
                                        <td><a href="#">@item.OrderNumber</a></td>
                                        <td>@item.InvoiceNumber</td>
                                        <td>@item.OrderDateTime</td>
                                        <td>@item.TableNumber </td>
                                        @if (@item.OrderStatus == "NEW")
                                        {
                                            <td><span class="label label-info">@item.OrderStatus</span></td>
                                        }
                                        else if (@item.OrderStatus == "COMPLETED")
                                        {
                                            <td><span class="label label-success">@item.OrderStatus</span></td>
                                        }
                                        else 
                                        {
                                            <td><span class="label label-warning">@item.OrderStatus</span></td>
                                        }
                                        <td>@item.Total</td>
                                        <td>@item.GST</td>
                                        <td>@item.NetTotal</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <a href="/Reports/SalesByDate" class="btn btn-sm btn-info btn-flat pull-left">Sales View</a>
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
